@model IEnumerable<BookingSystem.Models.CustomerModel>

@{
    ViewBag.Title = "Customers";
}
<br />
<h2>Customers</h2>
<div class="row">
    <div class="col-md-6">
        <p class="lead">
            List of all customers
        </p>
    </div>
    <div class="col-md-6">
        <div class="float-right">
            <p>
                @Html.ActionLink("Create New", "Create", "Customer", new { @class = "btn btn-outline-secondary" })
            </p>

        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Booking.BookingComments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="text-right">
            Options
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Booking.BookingComments)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td class="text-right">
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerId }, new { @class = "btn btn-sm btn-outline-secondary" })
            @Html.ActionLink("Details", "Details", new { id=item.CustomerId }, new { @class = "btn btn-sm btn-outline-secondary" })
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerId }, new { @class = "btn btn-sm btn-outline-secondary" })
        </td>
    </tr>
}

</table>
